{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es5",
        "resolveJsonModule": true,
        "esModuleInterop": true ,
        // "suppressImplicitAnyIndexErrors": true,
        "downlevelIteration": true,
        "isolatedModules": true,
        "typeRoots": [  
            "./src/types", 
            "./node_modules/@types"
        ],
        "lib": [ "es2015", "dom" ],
        "paths": {
            "@shared/*": ["./src/shared/*"],
            "@landsat-explorer/*": ["./src/landsat-explorer/*"],
            "@sentinel2-explorer/*": ["./src/sentinel-2-explorer/*"],
            "@landcover-explorer/*": ["./src/landcover-explorer/*"],
            "@typing/*": ["./src/types/*"]
        }
    },
    "exclude": [
        "**/node_modules", 
        "**/.*/"
    ],
    "include": [
        "./src/**/**/*"
, "public/__tests__"    ]
}